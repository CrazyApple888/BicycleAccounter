<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.AppCompat.ItemBigText">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextAppearance.AppCompat.HeaderText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.AppCompat.PriceText">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SaleBase" parent="TextAppearance.AppCompat.PriceText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SaleTitle" parent="SaleBase">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SaleText" parent="SaleBase">
        <item name="android:textColor">@color/divider_gray</item>
    </style>

    <style name="TextAppearance.AppCompat.DateText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/divider_gray</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.ItemCardView">
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="TextAppearance.AppCompat.ItemBigText.PageHeader">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.BikeParamText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="StatsPriceText" parent="TextAppearance.AppCompat.PriceText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.StatsParamText">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginVertical">16dp</item>
    </style>

    <style name="TextAppearance.AppCompat.BikeParamText.HeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>